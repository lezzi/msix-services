<Window x:Class="DesktopClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesktopClient"
        mc:Ignorable="d"
        Title="Desktop Client" Height="450" Width="500">
    <StackPanel Orientation="Vertical" HorizontalAlignment="Left" Margin="20">
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Version: " />
            <TextBlock x:Name="VersionTextBlock" />
        </StackPanel>
        
        <Button Width="120" Margin="0,20,0,0" Click="UpdateButton_OnClick">Update</Button>
        
        <TextBlock x:Name="ResultTextBlock" Margin="0,20,0,0" />
    </StackPanel>
</Window>
